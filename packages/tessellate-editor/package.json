{
  "name": "tessellate-editor",
  "version": "2.0.0-alpha.d484c6f9",
  "description": "Tessellate editor service.",
  "author": "Maximilian Fellner <maximilian.fellner@zalando.de>",
  "license": "MIT",
  "main": "dist/server.js",
  "publishConfig": {
    "tag": "next"
  },
  "bin": {
    "tessellate-editor": "./bin/tessellate-editor"
  },
  "engines": {
    "node": ">=v7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zalando-incubator/tessellate.git"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "build-client": "webpack",
    "build-server": "tsc -p server/tsconfig.json",
    "build": "yarn run build-client && yarn run build-server",
    "dist-client": "webpack -p",
    "dist": "yarn run clean && yarn run dist-client && yarn run build-server",
    "lint-client": "tslint --type-check --project client/tsconfig.json",
    "lint-server": "tslint --type-check --project server/tsconfig.json",
    "lint": "yarn run lint-client && yarn run lint-server",
    "test": "yarn run lint",
    "dev": "webpack-dev-server -d -w",
    "start": "TESSELLATE_CONF=conf.yaml bin/tessellate-editor",
    "prepublishOnly": "yarn run dist"
  },
  "dependencies": {
    "isomorphic-fetch": "2.2.1",
    "js-yaml": "3.10.0",
    "koa": "2.3.0",
    "koa-router": "7.2.1",
    "koa-static": "4.0.1",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "typeconf": "0.4.2",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "@types/compression-webpack-plugin": "0.3.1",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/koa": "2.0.39",
    "@types/koa-static": "3.0.1",
    "@types/node": "8.0.47",
    "@types/react": "16.0.18",
    "@types/react-dom": "16.0.2",
    "@types/webpack": "3.0.14",
    "@types/winston": "2.3.7",
    "awesome-typescript-loader": "3.2.3",
    "compression-webpack-plugin": "1.0.1",
    "html-webpack-plugin": "2.30.1",
    "rimraf": "2.6.2",
    "source-map-loader": "0.2.3",
    "ts-jest": "21.1.4",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "typescript": "2.5.3",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.test.ts$",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
