{
  "name": "tessellate-bundler",
  "version": "0.1.5",
  "description": "Tessellate bundler service.",
  "author": "Maximilian Fellner <maximilian.fellner@zalando.de>",
  "license": "MIT",
  "main": "dist/server.js",
  "publishConfig": {
    "tag": "next"
  },
  "bin": {
    "tessellate-bundler": "./bin/tessellate-bundler"
  },
  "engines": {
    "node": ">=v7.6.0",
    "npm": ">=5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zalando-incubator/tessellate.git"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "tsc -p tsconfig.dist.json",
    "dist": "yarn run clean && yarn run build",
    "start": "TESSELLATE_CONF=conf.yaml ts-node src/server.ts",
    "lint": "tslint --type-check --project tsconfig.json",
    "test": "yarn run lint && TESSELLATE_CONF=test/conf.yaml jest --coverage",
    "docs": "typedoc --readme none --tsconfig tsconfig.json --out doc",
    "prepublishOnly": "run dist"
  },
  "dependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "change-case": "3.0.1",
    "css-loader": "0.28.7",
    "extract-text-webpack-plugin": "3.0.2",
    "json-ptr": "1.0.1",
    "kcors": "2.2.1",
    "koa-send": "4.1.1",
    "mkdirp": "0.5.1",
    "prettier": "1.7.4",
    "style-loader": "0.19.0",
    "tessellate-server": "1.1.1",
    "thenify": "3.3.0",
    "webpack": "3.8.1",
    "webpack-sandboxed": "0.6.0"
  },
  "devDependencies": {
    "@types/extract-text-webpack-plugin": "3.0.0",
    "@types/kcors": "2.2.1",
    "@types/koa-send": "3.3.0",
    "@types/mkdirp": "0.5.1",
    "@types/mz": "0.0.32",
    "@types/node": "8.0.47",
    "@types/prettier": "1.7.1",
    "@types/supertest": "2.0.3",
    "@types/webpack": "3.0.14",
    "jest": "21.2.1",
    "mosaic-component-example": "1.0.2",
    "rimraf": "2.6.2",
    "supertest": "3.0.0",
    "ts-jest": "21.1.4",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "typedoc": "0.9.0",
    "typescript": "2.5.3"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.test.ts$",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
