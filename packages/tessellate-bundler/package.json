{
  "name": "tessellate-bundler",
  "version": "0.1.5",
  "description": "Tessellate bundler service.",
  "author": "Maximilian Fellner <maximilian.fellner@zalando.de>",
  "license": "MIT",
  "main": "dist/server.js",
  "publishConfig": {
    "tag": "next"
  },
  "bin": {
    "tessellate-bundler": "./bin/tessellate-bundler"
  },
  "engines": {
    "node": ">=v7.6.0",
    "npm": ">=5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zalando-incubator/tessellate.git"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "tsc -p .",
    "dist": "npm run clean && npm run build && npm run docs",
    "start": "ts-node example/server.ts",
    "lint": "tslint --type-check --project tsconfig.json && tslint test/**/.ts",
    "test": "npm run lint && TESSELLATE_CONF=test/conf.yaml jest --coverage",
    "docs": "typedoc --readme none --tsconfig tsconfig.json --out doc",
    "prepublishOnly": "run dist",
    "upgrade-dependencies": "ncu -u"
  },
  "dependencies": {
    "babel-core": "6.25.0",
    "babel-loader": "7.1.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "change-case": "3.0.1",
    "css-loader": "0.28.4",
    "debug": "2.6.8",
    "extract-text-webpack-plugin": "2.1.2",
    "kcors": "2.2.1",
    "koa-static": "4.0.0",
    "mkdirp": "0.5.1",
    "style-loader": "0.18.2",
    "tessellate-server": "1.1.1",
    "thenify": "3.3.0",
    "uuid": "3.1.0",
    "webpack": "3.1.0",
    "webpack-sandboxed": "0.5.2"
  },
  "devDependencies": {
    "@types/extract-text-webpack-plugin": "2.1.0",
    "@types/kcors": "2.2.1",
    "@types/koa-static": "3.0.0",
    "@types/mkdirp": "0.3.29",
    "@types/mz": "0.0.31",
    "@types/uuid": "3.0.0",
    "@types/webpack": "3.0.1",
    "jest": "20.0.4",
    "mosaic-component-example": "1.0.2",
    "npm-check-updates": "2.12.1",
    "rimraf": "2.6.1",
    "supertest": "3.0.0",
    "ts-jest": "20.0.6",
    "ts-node": "3.2.0",
    "tslint": "5.5.0",
    "typedoc": "0.7.1",
    "typescript": "2.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.test.ts$",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
