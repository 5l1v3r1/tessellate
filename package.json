{
  "name": "tessellate",
  "engines": {
    "node": ">=v7.6.0",
    "npm": ">=4.3.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn run dist",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "clean": "lerna run clean",
    "dist": "lerna run dist",
    "publish": "lerna publish --conventional-commits --exact --yes",
    "prettier": "prettier --print-width=100 --single-quote --write \"packages/tessellate-*/+(src|lib|client|server|static|test)/**/*.+(js|ts)\"",
    "publish-docs": "cd docs && yarn run publish"
  },
  "devDependencies": {
    "commitizen": "2.9.6",
    "cz-lerna-changelog": "1.2.1",
    "lerna": "2.5.1",
    "prettier": "1.8.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
